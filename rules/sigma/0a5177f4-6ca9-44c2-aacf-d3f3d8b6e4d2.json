{
  "id": "0a5177f4-6ca9-44c2-aacf-d3f3d8b6e4d2",
  "name": "AWS IAM Backdoor Users Keys",
  "description": "Detects AWS API key creation for a user by another user.\nBackdoored users can be used to obtain persistence in the AWS environment.\nAlso with this alert, you can detect a flow of AWS keys in your org.\n",
  "source": {
    "type": "sigma",
    "id": "0a5177f4-6ca9-44c2-aacf-d3f3d8b6e4d2",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/aws_iam_backdoor_users_keys.yml",
    "file_path": "tmp/repos/sigma/rules/cloud/aws/cloudtrail/aws_iam_backdoor_users_keys.yml"
  },
  "tags": [
    "attackpersistence",
    "attackt1098"
  ],
  "author": "faloker",
  "references": [
    "https://github.com/RhinoSecurityLabs/pacu/blob/866376cd711666c775bbfcde0524c817f2c5b181/pacu/modules/iam__backdoor_users_keys/main.py"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2020-02-12",
  "modified": "2022-10-09",
  "mitre": {
    "tactics": [
      "TA1098"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection_source: {\"eventSource\": \"iam.amazonaws.com\", \"eventName\": \"CreateAccessKey\"}\nfilter: {\"userIdentity.arn|contains\": \"responseElements.accessKey.userName\"}",
    "condition": "selection_source and not filter",
    "fields": [
      "userIdentity.arn",
      "responseElements.accessKey.userName",
      "errorCode",
      "errorMessage"
    ]
  },
  "falsepositives": [
    "Adding user keys to their own accounts (the filter cannot cover all possible variants of user naming)",
    "AWS API keys legitimate exchange workflows"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "aws",
    "cloudtrail"
  ]
}