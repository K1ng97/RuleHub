  "id": "04b45a8a-d11d-49e4-9acc-4a1b524407a5",
  "name": "DNS-over-HTTPS Enabled by Registry",
  "description": "Detects when a user enables DNS-over-HTTPS.\nThis can be used to hide internet activity or be used to hide the process of exfiltrating data.\nWith this enabled organization will lose visibility into data such as query type, response and originating IP that are used to determine bad actors.\n",
  "source": {
    "type": "sigma",
    "id": "04b45a8a-d11d-49e4-9acc-4a1b524407a5",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/registry_set_dns_over_https_enabled.yml",
    "file_path": "tmp/repos/sigma/rules/windows/registry/registry_set/registry_set_dns_over_https_enabled.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackt1112",
    "attackt1140"
  ],
  "author": "Austin Songer",
  "references": [
    "https://www.tenforums.com/tutorials/151318-how-enable-disable-dns-over-https-doh-microsoft-edge.html",
    "https://github.com/elastic/detection-rules/issues/1371",
    "https://chromeenterprise.google/policies/?policy=DnsOverHttpsMode",
    "https://admx.help/HKLM/Software/Policies/Mozilla/Firefox/DNSOverHTTPS"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2021-07-22",
  "modified": "2023-08-17",
  "mitre": {
    "tactics": [
      "TA1112",
      "TA1140"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection_edge: {\"TargetObject|endswith\": \"\\\\SOFTWARE\\\\Policies\\\\Microsoft\\\\Edge\\\\BuiltInDnsClientEnabled\", \"Details\": \"DWORD (0x00000001)\"}\nselection_chrome: {\"TargetObject|endswith\": \"\\\\SOFTWARE\\\\Google\\\\Chrome\\\\DnsOverHttpsMode\", \"Details\": \"secure\"}\nselection_firefox: {\"TargetObject|endswith\": \"\\\\SOFTWARE\\\\Policies\\\\Mozilla\\\\Firefox\\\\DNSOverHTTPS\\\\Enabled\", \"Details\": \"DWORD (0x00000001)\"}",
    "condition": "1 of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unlikely"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
