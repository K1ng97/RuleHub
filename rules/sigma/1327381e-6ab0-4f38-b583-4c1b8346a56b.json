  "detection": {
    "query": "selection_1: {\"Image|contains\": \"\\\\Windows\\\\\", \"CommandLine|contains\": [\"\\\\..\\\\Windows\\\\\", \"\\\\..\\\\System32\\\\\", \"\\\\..\\\\..\\\\\"]}\nselection_2: {\"CommandLine|contains\": \".exe\\\\..\\\\\"}\nfilter_optional_google_drive: {\"CommandLine|contains\": \"\\\\Google\\\\Drive\\\\googledrivesync.exe\\\\..\\\\\"}\nfilter_optional_citrix: {\"CommandLine|contains\": \"\\\\Citrix\\\\Virtual Smart Card\\\\Citrix.Authentication.VirtualSmartcard.Launcher.exe\\\\..\\\\\"}",
    "condition": "1 of selection_* and not 1 of filter_optional_*",
    "fields": []
  },
  "falsepositives": [
    "Google Drive",
    "Citrix"
  ],
  "level": "medium",
  "rule_format": "standard",
