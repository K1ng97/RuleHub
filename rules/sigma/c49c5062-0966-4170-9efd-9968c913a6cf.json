  "detection": {
    "query": "selection_sc_net_img: [{\"OriginalFileName\": [\"PowerShell.EXE\", \"pwsh.dll\"]}, {\"Image|endswith\": [\"\\\\powershell.exe\", \"\\\\pwsh.exe\"]}]\nselection_cli: {\"CommandLine|contains\": \"Stop-Service \"}",
    "condition": "all of selection_*",
    "fields": []
  },
