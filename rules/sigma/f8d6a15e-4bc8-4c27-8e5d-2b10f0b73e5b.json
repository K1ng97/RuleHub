  "detection": {
    "query": "selection_power: [{\"Image|endswith\": \"\\\\powercfg.exe\"}, {\"OriginalFileName\": \"PowerCfg.exe\"}]\nselection_standby: [{\"CommandLine|contains|all\": [\"/setacvalueindex \", \"SCHEME_CURRENT\", \"SUB_VIDEO\", \"VIDEOCONLOCK\"]}, {\"CommandLine|contains|all\": [\"-change \", \"-standby-timeout-\"]}]",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
