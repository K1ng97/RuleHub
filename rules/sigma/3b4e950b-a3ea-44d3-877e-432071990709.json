    "tactics": [
      "TA1083"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"ParentImage|endswith\": \"\\\\explorer.exe\", \"Image|endswith\": \"\\\\notepad.exe\", \"CommandLine|endswith\": [\"password*.txt\", \"password*.csv\", \"password*.doc\", \"password*.xls\"]}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Legitimate use of opening files from remote hosts by administrators or users. However, storing passwords in text readable format could potentially be a violation of the organization's policy. Any match should be investigated further."
  ],
  "level": "low",
  "rule_format": "standard",
  "platforms": [],
