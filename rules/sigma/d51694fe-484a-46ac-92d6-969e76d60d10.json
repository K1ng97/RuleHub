{
  "id": "d51694fe-484a-46ac-92d6-969e76d60d10",
  "name": "Access To Potentially Sensitive Sysvol Files By Uncommon Applications",
  "description": "Detects file access requests to potentially sensitive files hosted on the Windows Sysvol share.",
  "source": {
    "type": "sigma",
    "id": "d51694fe-484a-46ac-92d6-969e76d60d10",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/file_access_win_susp_gpo_files.yml",
    "file_path": "tmp/repos/sigma/rules/windows/file/file_access/file_access_win_susp_gpo_files.yml"
  },
  "tags": [
    "attackcredential-access",
    "attackt1552006"
  ],
  "author": "frack113",
  "references": [
    "https://github.com/vletoux/pingcastle"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "experimental",
  "created": "2023-12-21",
  "modified": "2024-07-29",
  "mitre": {
    "tactics": [
      "TA1552"
    ],
    "techniques": [
      "T006"
    ]
  },
  "detection": {
    "query": "selection: {\"FileName|startswith\": \"\\\\\\\\\", \"FileName|contains|all\": [\"\\\\sysvol\\\\\", \"\\\\Policies\\\\\"], \"FileName|endswith\": [\"audit.csv\", \"Files.xml\", \"GptTmpl.inf\", \"groups.xml\", \"Registry.pol\", \"Registry.xml\", \"scheduledtasks.xml\", \"scripts.ini\", \"services.xml\"]}\nfilter_main_generic: {\"Image|startswith\": [\"C:\\\\Program Files (x86)\\\\\", \"C:\\\\Program Files\\\\\", \"C:\\\\Windows\\\\system32\\\\\", \"C:\\\\Windows\\\\SysWOW64\\\\\"]}\nfilter_main_explorer: {\"Image\": \"C:\\\\Windows\\\\explorer.exe\"}",
    "condition": "selection and not 1 of filter_main_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "file_access"
  ]
}