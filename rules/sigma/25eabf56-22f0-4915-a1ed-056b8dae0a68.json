  "detection": {
    "query": "selection: {\"Initiated\": \"true\", \"DestinationHostname|endswith\": [\"api.dropboxapi.com\", \"content.dropboxapi.com\"]}\nfilter_main_legit_dropbox: {\"Image|contains\": \"\\\\Dropbox\"}",
    "condition": "selection and not 1 of filter_main_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate use of the API with a tool that the author wasn't aware of"
  ],
  "level": "high",
