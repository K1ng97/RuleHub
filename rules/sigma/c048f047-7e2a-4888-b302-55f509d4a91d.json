  },
  "tags": [
    "attackdefense-evasion",
    "attackt1218011"
  ],
  "author": "Christopher Peacock @securepeacock, SCYTHE @scythe_io",
  "references": [
    "https://lolbas-project.github.io/lolbas/Libraries/Desk/"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2022-04-27",
  "modified": "2023-08-23",
  "mitre": {
    "tactics": [
      "TA1218"
    ],
    "techniques": [
      "T011"
    ]
  },
  "detection": {
    "query": "selection: {\"TargetFilename|endswith\": \".scr\"}\nfilter: {\"TargetFilename|contains\": [\":\\\\$WINDOWS.~BT\\\\NewOS\\\\\", \":\\\\Windows\\\\System32\\\\\", \":\\\\Windows\\\\SysWOW64\\\\\", \":\\\\Windows\\\\WinSxS\\\\\", \":\\\\WUDownloadCache\\\\\"]}",
    "condition": "selection and not filter",
    "fields": []
  },
  "falsepositives": [
    "The installation of new screen savers by third party software"
  ],
  "level": "medium",
  "rule_format": "standard",
