  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\bitsadmin.exe\"}, {\"OriginalFileName\": \"bitsadmin.exe\"}]\nselection_flags: {\"CommandLine|contains\": [\" /transfer \", \" /create \", \" /addfile \"]}\nselection_extension: {\"CommandLine|contains\": [\".7z\", \".asax\", \".ashx\", \".asmx\", \".asp\", \".aspx\", \".bat\", \".cfm\", \".cgi\", \".chm\", \".cmd\", \".dll\", \".gif\", \".jpeg\", \".jpg\", \".jsp\", \".jspx\", \".log\", \".png\", \".ps1\", \".psm1\", \".rar\", \".scf\", \".sct\", \".txt\", \".vbe\", \".vbs\", \".war\", \".wsf\", \".wsh\", \".xll\", \".zip\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
