  "detection": {
    "query": "selection: {\"Image|endswith\": \"\\\\sc.exe\", \"CommandLine|contains|all\": [\"config\", \"binPath\"], \"CommandLine|contains\": [\"powershell\", \"cmd \", \"mshta\", \"wscript\", \"cscript\", \"rundll32\", \"svchost\", \"dllhost\", \"cmd.exe /c\", \"cmd.exe /k\", \"cmd.exe /r\", \"cmd /c\", \"cmd /k\", \"cmd /r\", \"C:\\\\Users\\\\Public\", \"\\\\Downloads\\\\\", \"\\\\Desktop\\\\\", \"\\\\Microsoft\\\\Windows\\\\Start Menu\\\\Programs\\\\Startup\\\\\", \"C:\\\\Windows\\\\TEMP\\\\\", \"\\\\AppData\\\\Local\\\\Temp\"]}",
    "condition": "selection",
    "fields": [
      "CommandLine",
      "ParentCommandLine"
    ]
  },
  "falsepositives": [
    "Unlikely"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
