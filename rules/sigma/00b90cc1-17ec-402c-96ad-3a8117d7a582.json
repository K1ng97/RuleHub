    "tactics": [
      "TA1105",
      "TA1567"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection_img: {\"Image|endswith\": \"/curl\"}\nselection_cli: [{\"CommandLine|contains\": [\" --form\", \" --upload-file \", \" --data \", \" --data-\"]}, {\"CommandLine|re\": \"\\\\s-[FTd]\\\\s\"}]\nfilter_optional_localhost: {\"CommandLine|contains\": [\"://localhost\", \"://127.0.0.1\"]}",
    "condition": "all of selection_* and not 1 of filter_optional_*",
    "fields": []
  },
  "falsepositives": [
    "Scripts created by developers and admins"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "linux",
    "process_creation"
  ]
