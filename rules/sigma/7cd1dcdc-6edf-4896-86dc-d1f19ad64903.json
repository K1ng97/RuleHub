  "name": "Network Connection Initiated To Cloudflared Tunnels Domains",
  "description": "Detects network connections to Cloudflared tunnels domains initiated by a process on the system.\nAttackers can abuse that feature to establish a reverse shell or persistence on a machine.\n",
  "source": {
    "type": "sigma",
    "id": "7cd1dcdc-6edf-4896-86dc-d1f19ad64903",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/net_connection_win_domain_cloudflared_communication.yml",
    "file_path": "tmp/repos/sigma/rules/windows/network_connection/net_connection_win_domain_cloudflared_communication.yml"
  },
  "tags": [
    "attackcommand-and-control",
    "attackexfiltration",
    "attackt1567001"
  ],
  "author": "Kamran Saifullah, Nasreddine Bencherchali (Nextron Systems)",
  "references": [
    "https://defr0ggy.github.io/research/Abusing-Cloudflared-A-Proxy-Service-To-Host-Share-Applications/",
    "https://www.guidepointsecurity.com/blog/tunnel-vision-cloudflared-abused-in-the-wild/",
    "Internal Research"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2024-05-27",
  "modified": "2024-05-27",
  "mitre": {
    "tactics": [
      "TA1567"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection: {\"Initiated\": \"true\", \"DestinationHostname|endswith\": [\".v2.argotunnel.com\", \"protocol-v2.argotunnel.com\", \"trycloudflare.com\", \"update.argotunnel.com\"]}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Legitimate use of cloudflare tunnels will also trigger this."
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "network_connection"
  ]
}