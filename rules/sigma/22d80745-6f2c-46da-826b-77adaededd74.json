    "attackpersistence",
    "attackprivilege-escalation",
    "attackt1574011"
  ],
  "author": "Nasreddine Bencherchali (Nextron Systems)",
  "references": [
    "https://twitter.com/Alh4zr3d/status/1580925761996828672",
    "https://learn.microsoft.com/en-us/powershell/module/microsoft.powershell.management/set-service?view=powershell-7.2"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "test",
  "created": "2022-10-24",
  "modified": "2022-10-24",
  "mitre": {
    "tactics": [
      "TA1574"
    ],
    "techniques": [
      "T011"
    ]
  },
  "detection": {
    "query": "selection_sddl_flag: {\"ScriptBlockText|contains\": [\"-SecurityDescriptorSddl \", \"-sd \"]}\nselection_set_service: {\"ScriptBlockText|contains|all\": [\"Set-Service \", \"D;;\"], \"ScriptBlockText|contains\": [\";;;IU\", \";;;SU\", \";;;BA\", \";;;SY\", \";;;WD\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Rare intended use of hidden services",
    "Rare FP could occur due to the non linearity of the ScriptBlockText log"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
