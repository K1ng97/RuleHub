  "mitre": {
    "tactics": [
      "TA1027",
      "TA1059"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": [\"\\\\powershell.exe\", \"\\\\pwsh.exe\"]}, {\"OriginalFileName\": [\"PowerShell.EXE\", \"pwsh.dll\"]}]\nselection_cli: {\"CommandLine|contains\": \"ConvertTo-SecureString\"}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate use to pass password to different powershell commands"
  ],
  "level": "medium",
  "rule_format": "standard",
