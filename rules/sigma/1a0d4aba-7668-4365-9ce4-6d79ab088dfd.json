  "detection": {
    "query": "selection: {\"Image|endswith\": \"\\\\ping.exe\", \"CommandLine|contains\": \"0x\"}",
    "condition": "selection",
    "fields": [
      "ParentCommandLine"
    ]
  },
  "falsepositives": [
    "Unlikely, because no sane admin pings IP addresses in a hexadecimal form"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
