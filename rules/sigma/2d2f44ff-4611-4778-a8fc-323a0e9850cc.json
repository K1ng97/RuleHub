  "severity": "high",
  "type": "sigma",
  "status": "experimental",
  "created": "2024-09-02",
  "modified": "2024-09-02",
  "mitre": {
    "tactics": [
      "TA1059"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": [\"/python\", \"/python2\", \"/python3\"]}, {\"Image|contains\": [\"/python2.\", \"/python3.\"]}]\nselection_cli: {\"CommandLine|contains|all\": [\" -c \", \"os.system(\"], \"CommandLine|contains\": [\"/bin/bash\", \"/bin/dash\", \"/bin/fish\", \"/bin/sh\", \"/bin/zsh\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
