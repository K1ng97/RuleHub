  "detection": {
    "query": "selection: {\"EventID\": 4697, \"ServiceFileName|contains\": [\"pcap\", \"npcap\", \"npf\", \"nm3\", \"ndiscap\", \"nmnt\", \"windivert\", \"USBPcap\", \"pktmon\"]}",
    "condition": "selection",
    "fields": [
      "EventID",
      "ServiceFileName",
      "Account_Name",
      "Computer_Name",
      "Originating_Computer",
      "ServiceName"
    ]
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
