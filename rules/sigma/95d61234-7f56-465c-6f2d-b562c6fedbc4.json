    "file_path": "tmp/repos/sigma/rules/linux/process_creation/proc_creation_lnx_remove_package.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackt1070"
  ],
  "author": "Tuan Le (NCSGroup), Nasreddine Bencherchali (Nextron Systems)",
  "references": [
    "https://sysdig.com/blog/mitre-defense-evasion-falco",
    "https://www.tutorialspoint.com/how-to-install-a-software-on-linux-using-yum-command",
    "https://linuxhint.com/uninstall_yum_package/",
    "https://linuxhint.com/uninstall-debian-packages/"
  ],
  "severity": "low",
  "type": "sigma",
  "status": "test",
  "created": "2023-03-09",
  "modified": "2023-03-09",
  "mitre": {
    "tactics": [
      "TA1070"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection_yum: {\"Image|endswith\": \"/yum\", \"CommandLine|contains\": [\"erase\", \"remove\"]}\nselection_apt: {\"Image|endswith\": [\"/apt\", \"/apt-get\"], \"CommandLine|contains\": [\"remove\", \"purge\"]}\nselection_dpkg: {\"Image|endswith\": \"/dpkg\", \"CommandLine|contains\": [\"--remove \", \" -r \"]}\nselection_rpm: {\"Image|endswith\": \"/rpm\", \"CommandLine|contains\": \" -e \"}",
    "condition": "1 of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Administrator or administrator scripts might delete packages for several reasons (debugging, troubleshooting)."
  ],
  "level": "low",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "linux",
    "process_creation"
  ]
}