    "https://www.mandiant.com/resources/blog/lnk-between-browsers"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2022-06-19",
  "modified": "2023-11-28",
  "mitre": {
    "tactics": [
      "TA1176"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"Image|endswith\": [\"\\\\brave.exe\", \"\\\\chrome.exe\", \"\\\\msedge.exe\", \"\\\\opera.exe\", \"\\\\vivaldi.exe\"], \"CommandLine|contains\": \"--load-extension=\"}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Usage of Chrome Extensions in testing tools such as BurpSuite will trigger this alert"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}