{
  "id": "092af964-4233-4373-b4ba-d86ea2890288",
  "name": "Add Debugger Entry To AeDebug For Persistence",
  "description": "Detects when an attacker adds a new \"Debugger\" value to the \"AeDebug\" key in order to achieve persistence which will get invoked when an application crashes",
  "source": {
    "type": "sigma",
    "id": "092af964-4233-4373-b4ba-d86ea2890288",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/registry_set_aedebug_persistence.yml",
    "file_path": "tmp/repos/sigma/rules/windows/registry/registry_set/registry_set_aedebug_persistence.yml"
  },
  "tags": [
    "attackpersistence"
  ],
  "author": "Nasreddine Bencherchali (Nextron Systems)",
  "references": [
    "https://persistence-info.github.io/Data/aedebug.html",
    "https://learn.microsoft.com/en-us/windows/win32/debug/configuring-automatic-debugging"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2022-07-21",
  "modified": "2023-08-17",
  "mitre": {
    "tactics": [],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"TargetObject|contains\": \"\\\\SOFTWARE\\\\Microsoft\\\\Windows NT\\\\CurrentVersion\\\\AeDebug\\\\Debugger\", \"Details|endswith\": \".dll\"}\nfilter: {\"Details\": \"\\\"C:\\\\WINDOWS\\\\system32\\\\vsjitdebugger.exe\\\" -p %ld -e %ld -j 0x%p\"}",
    "condition": "selection and not filter",
    "fields": []
  },
  "falsepositives": [
    "Legitimate use of the key to setup a debugger. Which is often the case on developers machines"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "registry_set"
  ]
}