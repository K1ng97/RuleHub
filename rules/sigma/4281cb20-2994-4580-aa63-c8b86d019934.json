  "mitre": {
    "tactics": [
      "TA1564"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\attrib.exe\"}, {\"OriginalFileName\": \"ATTRIB.EXE\"}]\nselection_cli: {\"CommandLine|contains\": \" +h \"}\nfilter_main_msiexec: {\"CommandLine|contains\": \"\\\\desktop.ini \"}\nfilter_optional_intel: {\"ParentImage|endswith\": \"\\\\cmd.exe\", \"CommandLine\": \"+R +H +S +A \\\\\\\\\\\\*.cui\", \"ParentCommandLine\": \"C:\\\\\\\\WINDOWS\\\\\\\\system32\\\\\\\\\\\\*.bat\"}",
    "condition": "all of selection_* and not 1 of filter_main_* and not 1 of filter_optional_*",
    "fields": []
  },
  "falsepositives": [
    "IgfxCUIService.exe hiding *.cui files via .bat script (attrib.exe a child of cmd.exe and igfxCUIService.exe is the parent of the cmd.exe)",
    "Msiexec.exe hiding desktop.ini"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}