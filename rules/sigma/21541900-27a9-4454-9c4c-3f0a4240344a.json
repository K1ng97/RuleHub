  "mitre": {
    "tactics": [
      "TA1068",
      "TA1190",
      "TA1203"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"User\": \"root\", \"LogonId\": 0, \"CurrentDirectory\": \"/var/opt/microsoft/scx/tmp\", \"CommandLine|contains\": \"/bin/sh\"}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Legitimate use of SCX RunAsProvider Invoke_ExecuteShellCommand."
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
