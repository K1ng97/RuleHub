  },
  "tags": [
    "attackpersistence",
    "attackt1556"
  ],
  "author": "Michael McIntyre @wtfender",
  "references": [
    "https://docs.aws.amazon.com/singlesignon/latest/userguide/app-enablement.html",
    "https://docs.aws.amazon.com/singlesignon/latest/userguide/sso-info-in-cloudtrail.html",
    "https://docs.aws.amazon.com/service-authorization/latest/reference/list_awsiamidentitycentersuccessortoawssinglesign-on.html"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "test",
  "created": "2023-09-27",
  "modified": "2023-09-27",
  "mitre": {
    "tactics": [
      "TA1556"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"eventSource\": [\"sso-directory.amazonaws.com\", \"sso.amazonaws.com\"], \"eventName\": [\"AssociateDirectory\", \"DisableExternalIdPConfigurationForDirectory\", \"DisassociateDirectory\", \"EnableExternalIdPConfigurationForDirectory\"]}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Authorized changes to the AWS account's identity provider"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
