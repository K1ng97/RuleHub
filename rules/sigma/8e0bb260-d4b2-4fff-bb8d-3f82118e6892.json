{
  "id": "8e0bb260-d4b2-4fff-bb8d-3f82118e6892",
  "name": "Potentially Suspicious CMD Shell Output Redirect",
  "description": "Detects inline Windows shell commands redirecting output via the \">\" symbol to a suspicious location.\nThis technique is sometimes used by malicious actors in order to redirect the output of reconnaissance commands such as \"hostname\" and \"dir\" to files for future exfiltration.\n",
  "source": {
    "type": "sigma",
    "id": "8e0bb260-d4b2-4fff-bb8d-3f82118e6892",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/proc_creation_win_cmd_redirection_susp_folder.yml",
    "file_path": "tmp/repos/sigma/rules/windows/process_creation/proc_creation_win_cmd_redirection_susp_folder.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackt1218"
  ],
  "author": "Nasreddine Bencherchali (Nextron Systems)",
  "references": [
    "https://thedfirreport.com/2022/07/11/select-xmrig-from-sqlserver/"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2022-07-12",
  "modified": "2024-03-19",
  "mitre": {
    "tactics": [
      "TA1218"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\cmd.exe\"}, {\"OriginalFileName\": \"Cmd.Exe\"}]\nselection_cli_1: {\"CommandLine|contains\": [\">?%APPDATA%\\\\\", \">?%TEMP%\\\\\", \">?%TMP%\\\\\", \">?%USERPROFILE%\\\\\", \">?C:\\\\ProgramData\\\\\", \">?C:\\\\Temp\\\\\", \">?C:\\\\Users\\\\Public\\\\\", \">?C:\\\\Windows\\\\Temp\\\\\"]}\nselection_cli_2: {\"CommandLine|contains\": [\" >\", \"\\\">\", \"'>\"], \"CommandLine|contains|all\": [\"C:\\\\Users\\\\\", \"\\\\AppData\\\\Local\\\\\"]}",
    "condition": "selection_img and 1 of selection_cli_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate admin or third party scripts used for diagnostic collection might generate some false positives"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}