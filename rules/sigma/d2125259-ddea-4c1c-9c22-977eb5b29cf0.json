{
  "id": "d2125259-ddea-4c1c-9c22-977eb5b29cf0",
  "name": "New Root Certificate Installed Via Certutil.EXE",
  "description": "Detects execution of \"certutil\" with the \"addstore\" flag in order to install a new certificate on the system.\nAdversaries may install a root certificate on a compromised system to avoid warnings when connecting to adversary controlled web servers.\n",
  "source": {
    "type": "sigma",
    "id": "d2125259-ddea-4c1c-9c22-977eb5b29cf0",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/proc_creation_win_certutil_certificate_installation.yml",
    "file_path": "tmp/repos/sigma/rules/windows/process_creation/proc_creation_win_certutil_certificate_installation.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackt1553004"
  ],
  "author": "oscd.community, @redcanary, Zach Stanford @svch0st",
  "references": [
    "https://github.com/redcanaryco/atomic-red-team/blob/f339e7da7d05f6057fdfcdd3742bfcf365fee2a9/atomics/T1553.004/T1553.004.md"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2023-03-05",
  "modified": "2024-03-05",
  "mitre": {
    "tactics": [
      "TA1553"
    ],
    "techniques": [
      "T004"
    ]
  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\certutil.exe\"}, {\"OriginalFileName\": \"CertUtil.exe\"}]\nselection_cli_add: {\"CommandLine|contains|windash\": \"-addstore\"}\nselection_cli_store: {\"CommandLine|contains\": \"root\"}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Help Desk or IT may need to manually add a corporate Root CA on occasion. Need to test if GPO push doesn't trigger FP"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}