  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\auditpol.exe\"}, {\"OriginalFileName\": \"AUDITPOL.EXE\"}]\nselection_cli: {\"CommandLine|contains\": [\"disable\", \"clear\", \"remove\", \"restore\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
