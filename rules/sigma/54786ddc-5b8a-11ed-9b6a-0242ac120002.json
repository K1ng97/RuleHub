    "query": "selection_count: {\"CommandLine|contains|windash\": \" -n \"}\nselection_nul: {\"CommandLine|contains\": \"Nul\"}\nselection_del_param: {\"CommandLine|contains|windash\": [\" -f \", \" -q \"]}\nselection_all: {\"CommandLine|contains|all\": [\"ping\", \"del \"]}",
    "condition": "all of selection_*",
    "fields": []
