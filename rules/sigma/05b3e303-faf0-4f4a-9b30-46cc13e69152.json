  "detection": {
    "query": "selection_add: {\"ScriptBlockText|contains\": \"Add-Content $profile\"}\nselection_options: {\"ScriptBlockText|contains\": [\"-Value \\\"IEX \", \"-Value \\\"Invoke-Expression\", \"-Value \\\"Invoke-WebRequest\", \"-Value \\\"Start-Process\", \"-Value 'IEX \", \"-Value 'Invoke-Expression\", \"-Value 'Invoke-WebRequest\", \"-Value 'Start-Process\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate administration and tuning scripts that aim to add functionality to a user PowerShell session"
