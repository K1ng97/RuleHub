    "file_path": "tmp/repos/sigma/rules/linux/auditd/lnx_auditd_binary_padding.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackt1027001"
  ],
  "author": "Igor Fits, oscd.community",
  "references": [
    "https://github.com/redcanaryco/atomic-red-team/blob/f339e7da7d05f6057fdfcdd3742bfcf365fee2a9/atomics/T1027.001/T1027.001.md"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "test",
  "created": "2020-10-13",
  "modified": "2023-05-03",
  "mitre": {
    "tactics": [
      "TA1027"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection_execve: {\"type\": \"EXECVE\"}\nkeywords_truncate: {\"|all\": [\"truncate\", \"-s\"]}\nkeywords_dd: {\"|all\": [\"dd\", \"if=\"]}\nkeywords_filter: [\"of=\"]",
    "condition": "selection_execve and (keywords_truncate or (keywords_dd and not keywords_filter))",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "linux",
    "auditd"
  ]
