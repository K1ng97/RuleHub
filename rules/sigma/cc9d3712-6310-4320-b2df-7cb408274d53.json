  "detection": {
    "query": "selection_img: {\"Image|endswith\": \"\\\\lodctr.exe\", \"OriginalFileName\": \"LODCTR.EXE\"}\nselection_cli: {\"CommandLine|contains|windash\": \" -r\"}",
    "condition": "all of selection_*",
    "fields": []
  },
