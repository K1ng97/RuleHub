  "mitre": {
    "tactics": [
      "TA1565"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection_img_1: {\"Image|endswith\": [\"/cat\", \"/echo\", \"/grep\", \"/head\", \"/more\", \"/tail\"], \"CommandLine|contains\": \">\"}\nselection_img_2: {\"Image|endswith\": [\"/emacs\", \"/nano\", \"/sed\", \"/vi\", \"/vim\"]}\nselection_paths: {\"CommandLine|contains\": [\"/bin/login\", \"/bin/passwd\", \"/boot/\", \"/etc/*.conf\", \"/etc/cron.\", \"/etc/crontab\", \"/etc/hosts\", \"/etc/init.d\", \"/etc/sudoers\", \"/opt/bin/\", \"/sbin\", \"/usr/bin/\", \"/usr/local/bin/\"]}",
    "condition": "1 of selection_img_* and selection_paths",
    "fields": []
  },
  "falsepositives": [
    "Some false positives are to be expected on user or administrator machines. Apply additional filters as needed."
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "linux",
    "process_creation"
  ]
}