    "file_path": "tmp/repos/sigma/rules/windows/builtin/security/win_security_net_share_obj_susp_desktop_ini.yml"
  },
  "tags": [
    "attackpersistence",
    "attackt1547009"
  ],
  "author": "Tim Shelton (HAWK.IO)",
  "references": [
    "https://isc.sans.edu/forums/diary/Desktopini+as+a+postexploitation+tool/25912/"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2021-12-06",
  "modified": "2022-01-16",
  "mitre": {
    "tactics": [
      "TA1547"
    ],
    "techniques": [
      "T009"
    ]
  },
  "detection": {
    "query": "selection: {\"EventID\": 5145, \"ObjectType\": \"File\", \"RelativeTargetName|endswith\": \"\\\\desktop.ini\", \"AccessList|contains\": [\"WriteData\", \"DELETE\", \"WriteDAC\", \"AppendData\", \"AddSubdirectory\"]}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Read only access list authority"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
