  "detection": {
    "query": "selection: {\"TargetFilename|endswith\": [\"\\\\WerFault.exe\", \"\\\\wer.dll\"]}\nfilter_main_known_locations: {\"TargetFilename|startswith\": [\"C:\\\\Windows\\\\SoftwareDistribution\\\\\", \"C:\\\\Windows\\\\System32\\\\\", \"C:\\\\Windows\\\\SysWOW64\\\\\", \"C:\\\\Windows\\\\WinSxS\\\\\"]}",
    "condition": "selection and not 1 of filter_main_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
