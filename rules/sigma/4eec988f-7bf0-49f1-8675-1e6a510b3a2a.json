  "detection": {
    "query": "selection_main: {\"EventType\": \"SetValue\", \"TargetObject|contains\": \"\\\\CurrentControlSet\\\\Control\\\\Session Manager\\\\PendingFileRenameOperations\"}\nselection_susp_paths: {\"Image|contains\": [\"\\\\AppData\\\\Local\\\\Temp\\\\\", \"\\\\Users\\\\Public\\\\\"]}\nselection_susp_images: {\"Image|endswith\": [\"\\\\reg.exe\", \"\\\\regedit.exe\"]}",
    "condition": "selection_main and 1 of selection_susp_*",
    "fields": []
  },
  "falsepositives": [
    "Installers and updaters may set currently in use files for rename or deletion after a reboot."
  ],
