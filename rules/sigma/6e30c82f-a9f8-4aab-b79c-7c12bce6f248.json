  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\bitsadmin.exe\"}, {\"OriginalFileName\": \"bitsadmin.exe\"}]\nselection_flags: {\"CommandLine|contains\": [\" /transfer \", \" /create \", \" /addfile \"]}\nselection_folder: {\"CommandLine|contains\": [\"%AppData%\", \"%temp%\", \"%tmp%\", \"\\\\AppData\\\\Local\\\\\", \"C:\\\\Windows\\\\Temp\\\\\"]}",
    "condition": "all of selection_*",
    "fields": [
      "CommandLine",
      "ParentCommandLine"
    ]
  },
  "falsepositives": [
    "Unknown"
  ],
