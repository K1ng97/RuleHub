  "detection": {
    "query": "selection: [{\"Image|endswith\": \"driverquery.exe\"}, {\"OriginalFileName\": \"drvqry.exe\"}]\nfilter_main_other: [{\"ParentImage|endswith\": [\"\\\\cscript.exe\", \"\\\\mshta.exe\", \"\\\\regsvr32.exe\", \"\\\\rundll32.exe\", \"\\\\wscript.exe\"]}, {\"ParentImage|contains\": [\"\\\\AppData\\\\Local\\\\\", \"\\\\Users\\\\Public\\\\\", \"\\\\Windows\\\\Temp\\\\\"]}]",
    "condition": "selection and not 1 of filter_main_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate use by third party tools in order to investigate installed drivers"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}