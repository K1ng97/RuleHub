  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\secedit.exe\"}, {\"OriginalFileName\": \"SeCEdit\"}]\nselection_flags_discovery: {\"CommandLine|contains|all\": [\"/export\", \"/cfg\"]}\nselection_flags_configure: {\"CommandLine|contains|all\": [\"/configure\", \"/db\"]}",
    "condition": "selection_img and (1 of selection_flags_*)",
    "fields": []
  },
  "falsepositives": [
    "Legitimate administrative use"
  ],
