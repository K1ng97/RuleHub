  "id": "b98d0db6-511d-45de-ad02-e82a98729620",
  "name": "Remotely Hosted HTA File Executed Via Mshta.EXE",
  "description": "Detects execution of the \"mshta\" utility with an argument containing the \"http\" keyword, which could indicate that an attacker is executing a remotely hosted malicious hta file",
  "source": {
    "type": "sigma",
    "id": "b98d0db6-511d-45de-ad02-e82a98729620",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/proc_creation_win_mshta_http.yml",
    "file_path": "tmp/repos/sigma/rules/windows/process_creation/proc_creation_win_mshta_http.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackexecution",
    "attackt1218005"
  ],
  "author": "Nasreddine Bencherchali (Nextron Systems)",
  "references": [
    "https://www.trendmicro.com/en_us/research/22/e/avoslocker-ransomware-variant-abuses-driver-file-to-disable-anti-Virus-scans-log4shell.html"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "test",
  "created": "2022-08-08",
  "modified": "2023-02-06",
  "mitre": {
    "tactics": [
      "TA1218"
    ],
    "techniques": [
      "T005"
    ]
  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\mshta.exe\"}, {\"OriginalFileName\": \"MSHTA.EXE\"}]\nselection_cli: {\"CommandLine|contains\": [\"http://\", \"https://\", \"ftp://\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}