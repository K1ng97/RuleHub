  "detection": {
    "query": "selection_1: {\"type\": \"PATH\", \"name\": [\"/etc/lsb-release\", \"/etc/redhat-release\", \"/etc/issue\"]}\nselection_2: {\"type\": \"EXECVE\", \"a0\": [\"uname\", \"uptime\", \"lsmod\", \"hostname\", \"env\"]}\nselection_3: {\"type\": \"EXECVE\", \"a0\": \"grep\", \"a1|contains\": [\"vbox\", \"vm\", \"xen\", \"virtio\", \"hv\"]}\nselection_4: {\"type\": \"EXECVE\", \"a0\": \"kmod\", \"a1\": \"list\"}",
    "condition": "1 of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Likely"
  ],
  "level": "low",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "linux",
    "auditd"
  ]
