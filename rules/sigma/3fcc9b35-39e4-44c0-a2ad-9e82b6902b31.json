  "detection": {
    "query": "selection: {\"CommandLine|contains\": [\"rm /var/log/syslog\", \"rm -r /var/log/syslog\", \"rm -f /var/log/syslog\", \"rm -rf /var/log/syslog\", \"unlink /var/log/syslog\", \"unlink -r /var/log/syslog\", \"unlink -f /var/log/syslog\", \"unlink -rf /var/log/syslog\", \"mv /var/log/syslog\", \" >/var/log/syslog\", \" > /var/log/syslog\"]}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Log rotation."
  ],
