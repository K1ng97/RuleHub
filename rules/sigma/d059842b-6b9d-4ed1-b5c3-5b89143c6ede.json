  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\bitsadmin.exe\"}, {\"OriginalFileName\": \"bitsadmin.exe\"}]\nselection_cmd: {\"CommandLine|contains\": \" /transfer \"}\nselection_cli_1: {\"CommandLine|contains\": [\" /create \", \" /addfile \"]}\nselection_cli_2: {\"CommandLine|contains\": \"http\"}",
    "condition": "selection_img and (selection_cmd or all of selection_cli_*)",
    "fields": [
      "CommandLine",
      "ParentCommandLine"
    ]
  },
  "falsepositives": [
    "Some legitimate apps use this, but limited."
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}