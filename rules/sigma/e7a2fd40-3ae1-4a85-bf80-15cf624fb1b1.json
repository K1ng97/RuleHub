  "detection": {
    "query": "scripts_base: {\"TargetObject|contains\": \"\\\\Software\\\\Policies\\\\Microsoft\\\\Windows\\\\System\\\\Scripts\"}\nscripts: {\"TargetObject|contains\": [\"\\\\Startup\", \"\\\\Shutdown\", \"\\\\Logon\", \"\\\\Logoff\"]}\nfilter: {\"Details\": \"(Empty)\"}",
    "condition": "scripts_base and scripts and not filter",
    "fields": [
      "SecurityID",
      "ObjectName",
      "OldValueType",
      "NewValueType"
    ]
  },
  "falsepositives": [
    "Legitimate software automatically (mostly, during installation) sets up autorun keys for legitimate reason",
    "Legitimate administrator sets up autorun keys for legitimate reason"
  ],
