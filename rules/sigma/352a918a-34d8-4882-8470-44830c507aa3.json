  "detection": {
    "query": "selection: {\"userIdentity.arn|re\": \".+:assumed-role/aws:.+\"}\nfilter_main_generic: [{\"eventSource\": \"ssm.amazonaws.com\"}, {\"eventName\": \"RegisterManagedInstance\"}, {\"sourceIPAddress\": \"AWS Internal\"}]",
    "condition": "selection and not 1 of filter_main_*",
    "fields": []
  },
  "falsepositives": [
    "A team has configured an EC2 instance to use instance profiles that grant the option for the EC2 instance to talk to other AWS Services"
