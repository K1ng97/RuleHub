  "detection": {
    "query": "selection_injection: {\"ScriptBlockText|contains|all\": [\"VirtualAlloc\", \"OpenProcess\", \"WriteProcessMemory\", \"CreateRemoteThread\"]}\nselection_token_steal: {\"ScriptBlockText|contains|all\": [\"OpenProcessToken\", \"LookupPrivilegeValue\", \"AdjustTokenPrivileges\"]}\nselection_duplicate_token: {\"ScriptBlockText|contains|all\": [\"OpenProcessToken\", \"DuplicateTokenEx\", \"CloseHandle\"]}\nselection_process_write_read: {\"ScriptBlockText|contains|all\": [\"WriteProcessMemory\", \"VirtualAlloc\", \"ReadProcessMemory\", \"VirtualFree\"]}",
    "condition": "1 of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
