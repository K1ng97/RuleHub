  "detection": {
    "query": "selection: {\"TargetObject|endswith\": \"\\\\Software\\\\Policies\\\\Microsoft\\\\Windows\\\\WindowsAI\\\\DisableAIDataAnalysis\", \"Details\": \"DWORD (0x00000000)\"}",
    "condition": "selection",
    "fields": []
  },
