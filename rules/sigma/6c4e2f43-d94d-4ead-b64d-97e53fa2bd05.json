    ]
  },
  "detection": {
    "query": "selection1: {\"TargetFilename|startswith\": [\"/etc/cron.d/\", \"/etc/cron.daily/\", \"/etc/cron.hourly/\", \"/etc/cron.monthly/\", \"/etc/cron.weekly/\", \"/var/spool/cron/crontabs/\"]}\nselection2: {\"TargetFilename|contains\": [\"/etc/cron.allow\", \"/etc/cron.deny\", \"/etc/crontab\"]}",
    "condition": "1 of selection*",
    "fields": []
  },
  "falsepositives": [
    "Any legitimate cron file."
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "linux",
    "file_event"
  ]
