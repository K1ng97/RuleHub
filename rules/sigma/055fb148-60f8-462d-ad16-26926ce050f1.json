  "name": "AWS User Login Profile Was Modified",
  "description": "Detects activity when someone is changing passwords on behalf of other users.\nAn attacker with the \"iam:UpdateLoginProfile\" permission on other users can change the password used to login to the AWS console on any user that already has a login profile setup.\n",
  "source": {
    "type": "sigma",
    "id": "055fb148-60f8-462d-ad16-26926ce050f1",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/aws_update_login_profile.yml",
    "file_path": "tmp/repos/sigma/rules/cloud/aws/cloudtrail/aws_update_login_profile.yml"
  },
  "tags": [
    "attackpersistence",
    "attackt1098"
  ],
  "author": "toffeebr33k",
  "references": [
    "https://github.com/RhinoSecurityLabs/AWS-IAM-Privilege-Escalation"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "test",
  "created": "2021-08-09",
  "modified": "2024-04-26",
  "mitre": {
    "tactics": [
      "TA1098"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"eventSource\": \"iam.amazonaws.com\", \"eventName\": \"UpdateLoginProfile\"}\nfilter_main_user_identity: {\"userIdentity.arn|fieldref\": \"requestParameters.userName\"}",
    "condition": "selection and not 1 of filter_main_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate user account administration"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "aws",
    "cloudtrail"
  ]
}