  "detection": {
    "query": "selection: {\"eventSource\": \"securityhub.amazonaws.com\", \"eventName\": [\"BatchUpdateFindings\", \"DeleteInsight\", \"UpdateFindings\", \"UpdateInsight\"]}",
    "condition": "selection",
    "fields": [
      "sourceIPAddress",
      "userIdentity.arn"
    ]
  },
  "falsepositives": [
    "System or Network administrator behaviors",
    "DEV, UAT, SAT environment. You should apply this rule with PROD environment only."
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "aws",
    "cloudtrail"
  ]
