  "detection": {
    "query": "selection_cmdlet: {\"ScriptBlockText|contains|all\": [\"Set-Acl \", \"-AclObject \"]}\nselection_paths: {\"ScriptBlockText|contains\": [\"-Path \\\"C:\\\\Windows\", \"-Path \\\"C:/Windows\", \"-Path 'C:\\\\Windows\", \"-Path 'C:/Windows\", \"-Path C:\\\\\\\\Windows\", \"-Path C:/Windows\", \"-Path $env:windir\", \"-Path \\\"$env:windir\", \"-Path '$env:windir\"]}\nselection_permissions: {\"ScriptBlockText|contains\": [\"FullControl\", \"Allow\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "ps_script"
  ]
