  "detection": {
    "query": "selection1: {\"type\": \"EXECVE\", \"a0\": \"iptables\", \"a1|contains\": \"DROP\"}\nselection2: {\"type\": \"EXECVE\", \"a0\": \"firewall-cmd\", \"a1|contains\": \"remove\"}\nselection3: {\"type\": \"EXECVE\", \"a0\": \"ufw\", \"a1|contains\": \"delete\"}",
    "condition": "1 of selection*",
    "fields": []
  },
  "falsepositives": [
