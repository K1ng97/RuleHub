  "id": "b18454c8-0be3-41f7-86bc-9c614611b839",
  "name": "Multi Factor Authentication Disabled For User Account",
  "description": "Detects changes to the \"StrongAuthenticationRequirement\" value, where the state is set to \"0\" or \"Disabled\".\nThreat actors were seen disabling multi factor authentication for users in order to maintain or achieve access to the account. Also see in SIM Swap attacks.\n",
  "source": {
    "type": "sigma",
    "id": "b18454c8-0be3-41f7-86bc-9c614611b839",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/azure_user_account_mfa_disable.yml",
    "file_path": "tmp/repos/sigma/rules/cloud/azure/audit_logs/azure_user_account_mfa_disable.yml"
  },
  "tags": [
    "attackcredential-access",
    "attackpersistence"
  ],
  "author": "Harjot Singh (@cyb3rjy0t)",
  "references": [
    "https://www.sans.org/blog/defending-against-scattered-spider-and-the-com-with-cybercrime-intelligence/"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "experimental",
  "created": "2024-08-21",
  "modified": "2024-08-21",
  "mitre": {
    "tactics": [],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"LoggedByService\": \"Core Directory\", \"Category\": \"UserManagement\", \"OperationName\": \"Update user\", \"TargetResources.ModifiedProperties.DisplayName\": \"StrongAuthenticationRequirement\", \"TargetResources.ModifiedProperties.NewValue|contains\": \"State\\\":0\"}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Legitimate authorized activity."
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "azure",
    "auditlogs"
  ]
}