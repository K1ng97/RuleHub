  "detection": {
    "query": "selection_path: {\"TargetObject|contains|all\": [\"\\\\SOFTWARE\\\\Microsoft\\\\Office\\\\\", \"\\\\Security\\\\ProtectedView\\\\\"]}\nselection_values_1: {\"Details\": \"DWORD (0x00000001)\", \"TargetObject|endswith\": [\"\\\\DisableAttachementsInPV\", \"\\\\DisableInternetFilesInPV\", \"\\\\DisableIntranetCheck\", \"\\\\DisableUnsafeLocationsInPV\"]}\nselection_values_0: {\"Details\": \"DWORD (0x00000000)\", \"TargetObject|endswith\": [\"\\\\enabledatabasefileprotectedview\", \"\\\\enableforeigntextfileprotectedview\"]}",
    "condition": "selection_path and 1 of selection_values_*",
    "fields": []
  },
  "falsepositives": [
    "Unlikely"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
