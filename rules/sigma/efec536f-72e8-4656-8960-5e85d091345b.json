      "TA1564"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\attrib.exe\"}, {\"OriginalFileName\": \"ATTRIB.EXE\"}]\nselection_cli: {\"CommandLine|contains\": \" +s\"}\nselection_paths: {\"CommandLine|contains\": [\" %\", \"\\\\Users\\\\Public\\\\\", \"\\\\AppData\\\\Local\\\\\", \"\\\\ProgramData\\\\\", \"\\\\Downloads\\\\\", \"\\\\Windows\\\\Temp\\\\\"]}\nselection_ext: {\"CommandLine|contains\": [\".bat\", \".dll\", \".exe\", \".hta\", \".ps1\", \".vbe\", \".vbs\"]}\nfilter_optional_installer: {\"CommandLine|contains|all\": [\"\\\\Windows\\\\TEMP\\\\\", \".exe\"]}",
    "condition": "all of selection* and not 1 of filter_optional_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}