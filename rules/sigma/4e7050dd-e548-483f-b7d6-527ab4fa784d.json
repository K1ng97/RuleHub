{
  "id": "4e7050dd-e548-483f-b7d6-527ab4fa784d",
  "name": "NTDS.DIT Creation By Uncommon Parent Process",
  "description": "Detects creation of a file named \"ntds.dit\" (Active Directory Database) by an uncommon parent process or directory",
  "source": {
    "type": "sigma",
    "id": "4e7050dd-e548-483f-b7d6-527ab4fa784d",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/file_event_win_ntds_dit_uncommon_parent_process.yml",
    "file_path": "tmp/repos/sigma/rules/windows/file/file_event/file_event_win_ntds_dit_uncommon_parent_process.yml"
  },
  "tags": [
    "attackcredential-access",
    "attackt1003003"
  ],
  "author": "Florian Roth (Nextron Systems)",
  "references": [
    "https://www.ired.team/offensive-security/credential-access-and-credential-dumping/ntds.dit-enumeration",
    "https://www.n00py.io/2022/03/manipulating-user-passwords-without-mimikatz/",
    "https://pentestlab.blog/tag/ntds-dit/",
    "https://github.com/samratashok/nishang/blob/414ee1104526d7057f9adaeee196d91ae447283e/Gather/Copy-VSS.ps1"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "test",
  "created": "2022-03-11",
  "modified": "2023-01-05",
  "mitre": {
    "tactics": [
      "TA1003"
    ],
    "techniques": [
      "T003"
    ]
  },
  "detection": {
    "query": "selection_file: {\"TargetFilename|endswith\": \"\\\\ntds.dit\"}\nselection_process_parent: {\"ParentImage|endswith\": [\"\\\\cscript.exe\", \"\\\\httpd.exe\", \"\\\\nginx.exe\", \"\\\\php-cgi.exe\", \"\\\\powershell.exe\", \"\\\\pwsh.exe\", \"\\\\w3wp.exe\", \"\\\\wscript.exe\"]}\nselection_process_parent_path: {\"ParentImage|contains\": [\"\\\\apache\", \"\\\\tomcat\", \"\\\\AppData\\\\\", \"\\\\Temp\\\\\", \"\\\\Public\\\\\", \"\\\\PerfLogs\\\\\"]}",
    "condition": "selection_file and 1 of selection_process_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "file_event"
  ]
}