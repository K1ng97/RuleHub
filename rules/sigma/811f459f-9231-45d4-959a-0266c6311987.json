  "detection": {
    "query": "selection_parent: {\"ParentImage|endswith\": [\"\\\\bginfo.exe\", \"\\\\bginfo64.exe\"]}\nselection_child: [{\"Image|endswith\": [\"\\\\calc.exe\", \"\\\\cmd.exe\", \"\\\\cscript.exe\", \"\\\\mshta.exe\", \"\\\\notepad.exe\", \"\\\\powershell.exe\", \"\\\\pwsh.exe\", \"\\\\wscript.exe\"]}, {\"Image|contains\": [\"\\\\AppData\\\\Local\\\\\", \"\\\\AppData\\\\Roaming\\\\\", \":\\\\Users\\\\Public\\\\\", \":\\\\Temp\\\\\", \":\\\\Windows\\\\Temp\\\\\", \":\\\\PerfLogs\\\\\"]}]",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
