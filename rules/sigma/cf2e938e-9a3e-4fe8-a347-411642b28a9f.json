  "detection": {
    "query": "selection_path: {\"CommandLine|contains\": [\"\\\\ShellIds\\\\Microsoft.PowerShell\\\\ExecutionPolicy\", \"\\\\Policies\\\\Microsoft\\\\Windows\\\\PowerShell\\\\ExecutionPolicy\"]}\nselection_values: {\"CommandLine|contains\": [\"Bypass\", \"RemoteSigned\", \"Unrestricted\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
