    "file_path": "tmp/repos/sigma/rules/windows/file/file_event/file_event_win_vhd_download_via_browsers.yml"
  },
  "tags": [
    "attackresource-development",
    "attackt1587001"
  ],
  "author": "frack113, Christopher Peacock '@securepeacock', SCYTHE '@scythe_io'",
  "references": [
    "https://redcanary.com/blog/intelligence-insights-october-2021/",
    "https://www.kaspersky.com/blog/lazarus-vhd-ransomware/36559/",
    "https://securelist.com/lazarus-on-the-hunt-for-big-game/97757/"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2021-10-25",
  "modified": "2023-05-05",
  "mitre": {
    "tactics": [
      "TA1587"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection: {\"Image|endswith\": [\"\\\\brave.exe\", \"\\\\chrome.exe\", \"\\\\firefox.exe\", \"\\\\iexplore.exe\", \"\\\\maxthon.exe\", \"\\\\MicrosoftEdge.exe\", \"\\\\msedge.exe\", \"\\\\msedgewebview2.exe\", \"\\\\opera.exe\", \"\\\\safari.exe\", \"\\\\seamonkey.exe\", \"\\\\vivaldi.exe\", \"\\\\whale.exe\"], \"TargetFilename|contains\": \".vhd\"}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Legitimate downloads of \".vhd\" files would also trigger this"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "file_event"
  ]
