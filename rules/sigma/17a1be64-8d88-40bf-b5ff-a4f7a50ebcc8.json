  "detection": {
    "query": "selection_sc: {\"Image|endswith\": \"\\\\sc.exe\", \"CommandLine|contains|all\": [\"create\", \"binPath=\"]}\nselection_posh: {\"CommandLine|contains|all\": [\"New-Service\", \"-BinaryPathName\"]}\nsusp_binpath: {\"CommandLine|contains\": [\"powershell\", \"mshta\", \"wscript\", \"cscript\", \"svchost\", \"dllhost\", \"cmd \", \"cmd.exe /c\", \"cmd.exe /k\", \"cmd.exe /r\", \"rundll32\", \"C:\\\\Users\\\\Public\", \"\\\\Downloads\\\\\", \"\\\\Desktop\\\\\", \"\\\\Microsoft\\\\Windows\\\\Start Menu\\\\Programs\\\\Startup\\\\\", \"C:\\\\Windows\\\\TEMP\\\\\", \"\\\\AppData\\\\Local\\\\Temp\"]}",
    "condition": "1 of selection* and susp_binpath",
    "fields": []
  },
  "falsepositives": [
    "Unlikely"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
