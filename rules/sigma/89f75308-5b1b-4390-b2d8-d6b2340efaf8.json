  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\wbadmin.exe\"}, {\"OriginalFileName\": \"WBADMIN.EXE\"}]\nselection_cli: {\"CommandLine|contains|all\": [\"delete \", \"backup\"]}\nfilter_main_keep_versions: {\"CommandLine|contains\": \"keepVersions:0\"}",
    "condition": "all of selection_* and not 1 of filter_main_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate backup activity from administration scripts and software."
  ],
