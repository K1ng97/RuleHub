    "file_path": "tmp/repos/sigma/rules/windows/process_creation/proc_creation_win_bash_command_execution.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackt1202"
  ],
  "author": "frack113",
  "references": [
    "https://lolbas-project.github.io/lolbas/Binaries/Bash/"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2021-11-24",
  "modified": "2023-08-15",
  "mitre": {
    "tactics": [
      "TA1202"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": [\":\\\\Windows\\\\System32\\\\bash.exe\", \":\\\\Windows\\\\SysWOW64\\\\bash.exe\"]}, {\"OriginalFileName\": \"Bash.exe\"}]\nselection_cli: {\"CommandLine|contains\": \" -c \"}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
