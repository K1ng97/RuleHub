  "name": "Windows Firewall Disabled via PowerShell",
  "description": "Detects attempts to disable the Windows Firewall using PowerShell",
  "source": {
    "type": "sigma",
    "id": "12f6b752-042d-483e-bf9c-915a6d06ad75",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/proc_creation_win_powershell_disable_firewall.yml",
    "file_path": "tmp/repos/sigma/rules/windows/process_creation/proc_creation_win_powershell_disable_firewall.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackt1562"
  ],
  "author": "Tim Rauch, Elastic (idea)",
  "references": [
    "https://www.elastic.co/guide/en/security/current/windows-firewall-disabled-via-powershell.html"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2022-09-14",
  "modified": "2023-02-13",
  "mitre": {
    "tactics": [
      "TA1562"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection_name: [{\"Image|endswith\": [\"\\\\powershell.exe\", \"\\\\pwsh.exe\", \"\\\\powershell_ise.exe\"]}, {\"OriginalFileName\": [\"PowerShell.EXE\", \"pwsh.dll\"]}]\nselection_args: {\"CommandLine|contains|all\": [\"Set-NetFirewallProfile \", \" -Enabled \", \" False\"]}\nselection_opt: {\"CommandLine|contains\": [\" -All \", \"Public\", \"Domain\", \"Private\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}