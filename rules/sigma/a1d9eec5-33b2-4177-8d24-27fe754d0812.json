  "detection": {
    "query": "selection: {\"QueryName|endswith\": [\".v2.argotunnel.com\", \"protocol-v2.argotunnel.com\", \"trycloudflare.com\", \"update.argotunnel.com\"]}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
