{
  "id": "f91ed517-a6ba-471d-9910-b3b4a398c0f3",
  "name": "Potentially Suspicious Windows App Activity",
  "description": "Detects potentially suspicious child process of applications launched from inside the WindowsApps directory. This could be a sign of a rogue \".appx\" package installation/execution",
  "source": {
    "type": "sigma",
    "id": "f91ed517-a6ba-471d-9910-b3b4a398c0f3",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/proc_creation_win_susp_appx_execution.yml",
    "file_path": "tmp/repos/sigma/rules/windows/process_creation/proc_creation_win_susp_appx_execution.yml"
  },
  "tags": [
    "attackdefense-evasion"
  ],
  "author": "Nasreddine Bencherchali (Nextron Systems)",
  "references": [
    "https://news.sophos.com/en-us/2021/11/11/bazarloader-call-me-back-attack-abuses-windows-10-apps-mechanism/",
    "https://www.sentinelone.com/labs/inside-malicious-windows-apps-for-malware-deployment/"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2023-01-12",
  "modified": "2023-08-31",
  "mitre": {
    "tactics": [],
    "techniques": []
  },
  "detection": {
    "query": "selection_parent: {\"ParentImage|contains\": \"C:\\\\Program Files\\\\WindowsApps\\\\\"}\nselection_susp_img: {\"Image|endswith\": [\"\\\\cmd.exe\", \"\\\\cscript.exe\", \"\\\\mshta.exe\", \"\\\\powershell.exe\", \"\\\\pwsh.exe\", \"\\\\regsvr32.exe\", \"\\\\rundll32.exe\", \"\\\\wscript.exe\"]}\nselection_susp_cli: {\"CommandLine|contains\": [\"cmd /c\", \"Invoke-\", \"Base64\"]}\nfilter_optional_terminal: {\"ParentImage|contains\": \":\\\\Program Files\\\\WindowsApps\\\\Microsoft.WindowsTerminal\", \"ParentImage|endswith\": \"\\\\WindowsTerminal.exe\", \"Image|endswith\": [\"\\\\powershell.exe\", \"\\\\cmd.exe\", \"\\\\pwsh.exe\"]}",
    "condition": "selection_parent and 1 of selection_susp_* and not 1 of filter_optional_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate packages that make use of external binaries such as Windows Terminal"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}