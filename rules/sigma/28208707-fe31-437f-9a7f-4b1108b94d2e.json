  "detection": {
    "query": "selection: {\"TargetFilename|contains\": \"\\\\Windows\\\\Start Menu\\\\Programs\\\\Startup\\\\\", \"TargetFilename|endswith\": [\".vbs\", \".vbe\", \".bat\", \".ps1\", \".hta\", \".dll\", \".jar\", \".msi\", \".scr\", \".cmd\"]}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Rare legitimate usage of some of the extensions mentioned in the rule"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "file_event"
  ]
