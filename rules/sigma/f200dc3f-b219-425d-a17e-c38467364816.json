  "mitre": {
    "tactics": [
      "TA1115"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"type\": \"EXECVE\", \"a0\": \"xclip\", \"a1\": [\"-selection\", \"-sel\"], \"a2\": [\"clipboard\", \"clip\"], \"a3\": \"-t\", \"a4|startswith\": \"image/\", \"a5\": \"-o\"}",
    "condition": "selection",
    "fields": []
  },
