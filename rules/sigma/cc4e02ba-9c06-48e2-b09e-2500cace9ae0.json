  "detection": {
    "query": "selection1: {\"CommandLine|contains\": [\"echo \", \"copy \", \"type \", \"file createnew\"]}\nselection2: {\"CommandLine|contains\": [\" C:\\\\Windows\\\\System32\\\\Tasks\\\\\", \" C:\\\\Windows\\\\SysWow64\\\\Tasks\\\\\"]}",
    "condition": "all of selection*",
    "fields": [
      "CommandLine",
      "ParentProcess"
    ]
  },
  "falsepositives": [
    "Unknown"
  ],
