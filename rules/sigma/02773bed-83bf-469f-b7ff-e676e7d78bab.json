  "detection": {
    "query": "selection: {\"TargetFilename|endswith\": [\"BloodHound.zip\", \"_computers.json\", \"_containers.json\", \"_domains.json\", \"_gpos.json\", \"_groups.json\", \"_ous.json\", \"_users.json\"]}\nfilter_optional_ms_winapps: {\"Image|endswith\": \"\\\\svchost.exe\", \"TargetFilename|startswith\": \"C:\\\\Program Files\\\\WindowsApps\\\\Microsoft.\", \"TargetFilename|endswith\": \"\\\\pocket_containers.json\"}",
    "condition": "selection and not 1 of filter_optional_*",
    "fields": []
  },
  "falsepositives": [
