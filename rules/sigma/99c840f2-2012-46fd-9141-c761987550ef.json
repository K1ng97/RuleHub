  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\bitsadmin.exe\"}, {\"OriginalFileName\": \"bitsadmin.exe\"}]\nselection_flags: {\"CommandLine|contains\": [\" /transfer \", \" /create \", \" /addfile \"]}\nselection_extension: {\"CommandLine|contains\": [\"://1\", \"://2\", \"://3\", \"://4\", \"://5\", \"://6\", \"://7\", \"://8\", \"://9\"]}\nfilter_seven_zip: {\"CommandLine|contains\": \"://7-\"}",
    "condition": "all of selection_* and not 1 of filter_*",
    "fields": [
      "CommandLine",
      "ParentCommandLine"
    ]
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}