  "mitre": {
    "tactics": [
      "TA1565"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection: {\"Image|endswith\": [\"/rm\", \"/unlink\", \"/shred\"]}\nselection_history: [{\"CommandLine|contains\": [\"/.bash_history\", \"/.zsh_history\"]}, {\"CommandLine|endswith\": [\"_history\", \".history\", \"zhistory\"]}]",
    "condition": "all of selection*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate administration activities"
  ],
  "level": "high",
  "rule_format": "standard",
