  "status": "test",
  "created": "2021-12-06",
  "modified": "2024-05-31",
  "mitre": {
    "tactics": [
      "TA1567"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection: {\"Initiated\": \"true\", \"DestinationHostname|endswith\": [\"mega.co.nz\", \"mega.nz\"]}",
    "condition": "selection",
    "fields": []
