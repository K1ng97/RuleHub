  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\mstsc.exe\"}, {\"OriginalFileName\": \"mstsc.exe\"}]\nselection_cli: {\"CommandLine|contains|windash\": \" /v:\"}\nfilter_optional_wsl: {\"ParentImage\": \"C:\\\\Windows\\\\System32\\\\lxss\\\\wslhost.exe\", \"CommandLine|contains\": \"C:\\\\ProgramData\\\\Microsoft\\\\WSL\\\\wslg.rdp\"}",
    "condition": "all of selection_* and not 1 of filter_optional_*",
    "fields": []
  },
  "falsepositives": [
    "WSL (Windows Sub System For Linux)"
  ],
