  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\odbcconf.exe\"}, {\"OriginalFileName\": \"odbcconf.exe\"}]\nselection_cli: {\"CommandLine|contains\": \"INSTALLDRIVER \"}\nfilter_main_dll_ext: {\"CommandLine|contains\": \".dll\"}",
    "condition": "all of selection_* and not 1 of filter_main_*",
    "fields": []
  },
  "falsepositives": [
    "Unlikely"
  ],
  "level": "high",
  "rule_format": "standard",
