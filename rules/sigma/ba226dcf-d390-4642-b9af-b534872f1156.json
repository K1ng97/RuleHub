  "detection": {
    "query": "selection_key_1: {\"TargetObject|contains\": \"\\\\SYSTEM\\\\CurrentControlSet\\\\Services\\\\EventLog\\\\\", \"TargetObject|endswith\": \"\\\\CustomSD\"}\nselection_key_2: {\"TargetObject|contains\": [\"\\\\Policies\\\\Microsoft\\\\Windows\\\\EventLog\\\\\", \"\\\\Microsoft\\\\Windows\\\\CurrentVersion\\\\WINEVT\\\\Channels\"], \"TargetObject|endswith\": \"\\\\ChannelAccess\"}\nselection_details: [{\"Details|contains\": \"D:(D;\"}, {\"Details|contains|all\": [\"D:(\", \")(D;\"]}]",
    "condition": "1 of selection_key_* and selection_details",
    "fields": []
  },
  "falsepositives": [
    "Administrative activity, still unlikely"
  ],
