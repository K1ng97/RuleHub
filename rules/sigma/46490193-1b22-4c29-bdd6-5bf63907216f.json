  "detection": {
    "query": "selection: {\"TargetObject|contains\": \"Software\\\\Microsoft\\\\Windows\\\\CurrentVersion\", \"Details|contains\": [\"vbscript:\", \"jscript:\", \"mshtml,\", \"RunHTMLApplication\", \"Execute(\", \"CreateObject\", \"window.close\"]}\nfilter: {\"TargetObject|contains\": \"Software\\\\Microsoft\\\\Windows\\\\CurrentVersion\\\\Run\"}\nfilter_dotnet: {\"Image|endswith\": \"\\\\msiexec.exe\", \"TargetObject|contains\": \"\\\\SOFTWARE\\\\Microsoft\\\\Windows\\\\CurrentVersion\\\\Installer\\\\UserData\\\\\", \"Details|contains\": [\"\\\\Microsoft.NET\\\\Primary Interop Assemblies\\\\Microsoft.mshtml.dll\", \"<\\\\Microsoft.mshtml,fileVersion=\", \"_mshtml_dll_\", \"<\\\\Microsoft.mshtml,culture=\"]}",
    "condition": "selection and not 1 of filter*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "registry_set"
  ]
