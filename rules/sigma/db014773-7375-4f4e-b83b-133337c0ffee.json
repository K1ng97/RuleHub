  "detection": {
    "query": "selection: {\"eventSource\": \"iam.amazonaws.com\", \"eventName\": \"PutUserPolicy\", \"userAgent|contains\": \"S3 Browser\", \"requestParameters|contains|all\": [\"\\\"arn:aws:s3:::<YOUR-BUCKET-NAME>/*\\\"\", \"\\\"s3:GetObject\\\"\", \"\\\"Allow\\\"\"]}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Valid usage of S3 browser with accidental creation of default Inline IAM policy without changing default S3 bucket name placeholder value"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
