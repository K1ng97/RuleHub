  "detection": {
    "query": "selection_1: {\"CommandLine|contains\": [\"echo\", \"copy\", \"type\", \"file createnew\", \"cacls\"]}\nselection_2: {\"CommandLine|contains\": \"C:\\\\Windows\\\\Fonts\\\\\"}\nselection_3: {\"CommandLine|contains\": [\".sh\", \".exe\", \".dll\", \".bin\", \".bat\", \".cmd\", \".js\", \".msh\", \".reg\", \".scr\", \".ps\", \".vb\", \".jar\", \".pl\", \".inf\", \".cpl\", \".hta\", \".msi\", \".vbs\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
