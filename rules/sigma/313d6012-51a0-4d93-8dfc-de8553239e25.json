    "file_path": "tmp/repos/sigma/rules/windows/process_creation/proc_creation_win_winget_local_install_via_manifest.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackexecution",
    "attackt1059"
  ],
  "author": "Sreeman, Florian Roth (Nextron Systems), frack113",
  "references": [
    "https://learn.microsoft.com/en-us/windows/package-manager/winget/install#local-install",
    "https://lolbas-project.github.io/lolbas/Binaries/Winget/",
    "https://github.com/nasbench/Misc-Research/tree/b9596e8109dcdb16ec353f316678927e507a5b8d/LOLBINs/Winget"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2020-04-21",
  "modified": "2023-04-17",
  "mitre": {
    "tactics": [
      "TA1059"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\winget.exe\"}, {\"OriginalFileName\": \"winget.exe\"}]\nselection_install_flag: {\"CommandLine|contains\": [\"install\", \" add \"]}\nselection_manifest_flag: {\"CommandLine|contains\": [\"-m \", \"--manifest\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Some false positives are expected in some environment that may use this functionality to install and test their custom applications"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}