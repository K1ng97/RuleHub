    "file_path": "tmp/repos/sigma/rules/linux/process_creation/proc_creation_lnx_susp_container_residence_discovery.yml"
  },
  "tags": [
    "attackdiscovery",
    "attackt1082"
  ],
  "author": "Seth Hanford",
  "references": [
    "https://blog.skyplabs.net/posts/container-detection/",
    "https://stackoverflow.com/questions/20010199/how-to-determine-if-a-process-runs-inside-lxc-docker"
  ],
  "severity": "low",
  "type": "sigma",
  "status": "test",
  "created": "2023-08-23",
  "modified": "2023-08-23",
  "mitre": {
    "tactics": [
      "TA1082"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection_tools: {\"Image|endswith\": [\"awk\", \"/cat\", \"grep\", \"/head\", \"/less\", \"/more\", \"/nl\", \"/tail\"]}\nselection_procfs_kthreadd: {\"CommandLine|contains\": \"/proc/2/\"}\nselection_procfs_target: {\"CommandLine|contains\": \"/proc/\", \"CommandLine|endswith\": [\"/cgroup\", \"/sched\"]}",
    "condition": "selection_tools and 1 of selection_procfs_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate system administrator usage of these commands",
    "Some container tools or deployments may use these techniques natively to determine how they proceed with execution, and will need to be filtered"
  ],
  "level": "low",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "linux",
    "process_creation"
  ]
}