  "mitre": {
    "tactics": [
      "TA1059"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection_install: {\"ScriptBlockText|contains\": \"Install-WindowsFeature WindowsPowerShellWebAccess\"}\nselection_config: {\"ScriptBlockText|contains\": \"Install-PswaWebApplication\"}\nselection_auth: {\"ScriptBlockText|contains|all\": [\"Add-PswaAuthorizationRule\", \"-UserName *\", \"-ComputerName *\"]}",
    "condition": "1 of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate PowerShell Web Access installations by administrators"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "ps_script"
  ]
