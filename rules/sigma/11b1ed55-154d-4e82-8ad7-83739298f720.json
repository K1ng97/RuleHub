{
  "id": "11b1ed55-154d-4e82-8ad7-83739298f720",
  "name": "NTDS.DIT Creation By Uncommon Process",
  "description": "Detects creation of a file named \"ntds.dit\" (Active Directory Database) by an uncommon process or a process located in a suspicious directory",
  "source": {
    "type": "sigma",
    "id": "11b1ed55-154d-4e82-8ad7-83739298f720",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/file_event_win_ntds_dit_uncommon_process.yml",
    "file_path": "tmp/repos/sigma/rules/windows/file/file_event/file_event_win_ntds_dit_uncommon_process.yml"
  },
  "tags": [
    "attackcredential-access",
    "attackt1003002",
    "attackt1003003"
  ],
  "author": "Florian Roth (Nextron Systems), Nasreddine Bencherchali (Nextron Systems)",
  "references": [
    "https://stealthbits.com/blog/extracting-password-hashes-from-the-ntds-dit-file/",
    "https://adsecurity.org/?p=2398"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "test",
  "created": "2022-01-11",
  "modified": "2022-07-14",
  "mitre": {
    "tactics": [
      "TA1003"
    ],
    "techniques": [
      "T002",
      "T003"
    ]
  },
  "detection": {
    "query": "selection_ntds: {\"TargetFilename|endswith\": \"\\\\ntds.dit\"}\nselection_process_img: {\"Image|endswith\": [\"\\\\cmd.exe\", \"\\\\cscript.exe\", \"\\\\mshta.exe\", \"\\\\powershell.exe\", \"\\\\pwsh.exe\", \"\\\\regsvr32.exe\", \"\\\\rundll32.exe\", \"\\\\wscript.exe\", \"\\\\wsl.exe\", \"\\\\wt.exe\"]}\nselection_process_paths: {\"Image|contains\": [\"\\\\AppData\\\\\", \"\\\\Temp\\\\\", \"\\\\Public\\\\\", \"\\\\PerfLogs\\\\\"]}",
    "condition": "selection_ntds and 1 of selection_process_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "file_event"
  ]
}