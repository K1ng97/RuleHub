  "detection": {
    "query": "selection_1a_payload: {\"Payload|contains\": [\"del\", \"Remove-Item\", \"rm\"]}\nselection_1b_payload: {\"Payload|contains\": \"(Get-PSReadlineOption).HistorySavePath\"}\nselection_payload_2: {\"Payload|contains|all\": [\"Set-PSReadlineOption\", \"\\u2013HistorySaveStyle\", \"SaveNothing\"]}\nselection_payload_3: {\"Payload|contains|all\": [\"Set-PSReadlineOption\", \"-HistorySaveStyle\", \"SaveNothing\"]}",
    "condition": "1 of selection_payload_* or all of selection_1*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate PowerShell scripts"
  ],
  "level": "medium",
  "rule_format": "standard",
