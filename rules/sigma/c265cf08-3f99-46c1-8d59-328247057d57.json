  "detection": {
    "query": "selection_eid: {\"EventID\": 4732}\nselection_group: [{\"TargetUserName|startswith\": \"Administr\"}, {\"TargetSid\": \"S-1-5-32-544\"}]\nfilter_main_computer_accounts: {\"SubjectUserName|endswith\": \"$\"}",
    "condition": "all of selection_* and not 1 of filter_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate administrative activity"
  ],
