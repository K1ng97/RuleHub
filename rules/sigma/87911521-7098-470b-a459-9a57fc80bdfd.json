    "attackdefense-evasion",
    "attackt1562001"
  ],
  "author": "Nasreddine Bencherchali (Nextron Systems)",
  "references": [
    "https://learn.microsoft.com/en-us/sysinternals/downloads/sysmon"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2023-03-09",
  "modified": "2024-03-13",
  "mitre": {
    "tactics": [
      "TA1562"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection_pe: [{\"Image|endswith\": [\"\\\\Sysmon64.exe\", \"\\\\Sysmon.exe\"]}, {\"Description\": \"System activity monitor\"}]\nselection_cli: {\"CommandLine|contains|windash\": \"-c\"}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate administrators might use this command to update Sysmon configuration."
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
