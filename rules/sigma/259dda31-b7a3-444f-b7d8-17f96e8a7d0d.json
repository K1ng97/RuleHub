  "detection": {
    "query": "selection: {\"Image\": \"C:\\\\Windows\\\\System32\\\\SystemResetPlatform\\\\SystemResetPlatform.exe\", \"ImageLoaded\": \"C:\\\\$SysReset\\\\Framework\\\\Stack\\\\RjvPlatform.dll\"}",
