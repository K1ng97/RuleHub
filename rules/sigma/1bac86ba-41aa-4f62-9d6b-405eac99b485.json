  "detection": {
    "query": "path: {\"type\": \"PATH\", \"nametype\": \"CREATE\"}\nname_1: {\"name|startswith\": [\"/usr/lib/systemd/system/\", \"/etc/systemd/system/\"]}\nname_2: {\"name|contains\": \"/.config/systemd/user/\"}",
    "condition": "path and 1 of name_*",
    "fields": []
  },
  "falsepositives": [
    "Admin work like legit service installs."
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "linux",
    "auditd"
  ]
