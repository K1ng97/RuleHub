{
  "id": "a1b1fd53-9c4a-444c-bae0-34a330fc7aa8",
  "name": "Potential Persistence Via DLLPathOverride",
  "description": "Detects when an attacker adds a new \"DLLPathOverride\" value to the \"Natural Language\" key in order to achieve persistence which will get invoked by \"SearchIndexer.exe\" process",
  "source": {
    "type": "sigma",
    "id": "a1b1fd53-9c4a-444c-bae0-34a330fc7aa8",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/registry_set_persistence_natural_language.yml",
    "file_path": "tmp/repos/sigma/rules/windows/registry/registry_set/registry_set_persistence_natural_language.yml"
  },
  "tags": [
    "attackpersistence"
  ],
  "author": "Nasreddine Bencherchali (Nextron Systems)",
  "references": [
    "https://persistence-info.github.io/Data/naturallanguage6.html",
    "https://www.hexacorn.com/blog/2018/12/30/beyond-good-ol-run-key-part-98/"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "test",
  "created": "2022-07-21",
  "modified": "2023-08-17",
  "mitre": {
    "tactics": [],
    "techniques": []
  },
  "detection": {
    "query": "selection_root: {\"TargetObject|contains\": \"\\\\SYSTEM\\\\CurrentControlSet\\\\Control\\\\ContentIndex\\\\Language\\\\\"}\nselection_values: {\"TargetObject|contains\": [\"\\\\StemmerDLLPathOverride\", \"\\\\WBDLLPathOverride\", \"\\\\StemmerClass\", \"\\\\WBreakerClass\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "registry_set"
  ]
}