  "id": "22f2fb54-5312-435d-852f-7c74f81684ca",
  "name": "Google Workspace Application Access Level Modified",
  "description": "Detects when an access level is changed for a Google workspace application.\nAn access level is part of BeyondCorp Enterprise which is Google Workspace's way of enforcing Zero Trust model.\nAn adversary would be able to remove access levels to gain easier access to Google workspace resources.\n",
  "source": {
    "type": "sigma",
    "id": "22f2fb54-5312-435d-852f-7c74f81684ca",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/gcp_gworkspace_application_access_levels_modified.yml",
    "file_path": "tmp/repos/sigma/rules/cloud/gcp/gworkspace/gcp_gworkspace_application_access_levels_modified.yml"
  },
  "tags": [
    "attackpersistence",
    "attackprivilege-escalation",
    "attackt1098003"
  ],
  "author": "Bryan Lim",
  "references": [
    "https://developers.google.com/admin-sdk/reports/v1/appendix/activity/admin-application-settings",
    "https://support.google.com/a/answer/9261439"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2024-01-12",
  "modified": "2024-01-12",
  "mitre": {
    "tactics": [
      "TA1098"
    ],
    "techniques": [
      "T003"
    ]
  },
  "detection": {
    "query": "selection: {\"eventService\": \"admin.googleapis.com\", \"eventName\": \"CHANGE_APPLICATION_SETTING\", \"setting_name|startswith\": \"ContextAwareAccess\"}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Legitimate administrative activities changing the access levels for an application"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "gcp",
    "google_workspace.admin"
  ]
}