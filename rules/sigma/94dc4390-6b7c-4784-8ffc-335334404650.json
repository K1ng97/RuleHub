  "detection": {
    "query": "selection_root: {\"Provider_Name\": \"ESENT\", \"EventID\": 325, \"Data|contains\": \"ntds.dit\"}\nselection_paths: {\"Data|contains\": [\":\\\\ntds.dit\", \"\\\\Appdata\\\\\", \"\\\\Desktop\\\\\", \"\\\\Downloads\\\\\", \"\\\\Perflogs\\\\\", \"\\\\Temp\\\\\", \"\\\\Users\\\\Public\\\\\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate backup operation/creating shadow copies"
  ],
