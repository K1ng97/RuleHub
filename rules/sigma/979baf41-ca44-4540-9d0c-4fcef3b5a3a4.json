  "name": "Potential File Extension Spoofing Using Right-to-Left Override",
  "description": "Detects suspicious filenames that contain a right-to-left override character and a potentially spoofed file extensions.\n",
  "source": {
    "type": "sigma",
    "id": "979baf41-ca44-4540-9d0c-4fcef3b5a3a4",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/file_event_win_susp_right_to_left_override_extension_spoofing.yml",
    "file_path": "tmp/repos/sigma/rules/windows/file/file_event/file_event_win_susp_right_to_left_override_extension_spoofing.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackexecution",
    "attackt1036002"
  ],
  "author": "Jonathan Peters (Nextron Systems), Florian Roth (Nextron Systems)",
  "references": [
    "https://redcanary.com/blog/right-to-left-override/",
    "https://www.malwarebytes.com/blog/news/2014/01/the-rtlo-method"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "experimental",
  "created": "2024-11-17",
  "modified": "2024-11-17",
  "mitre": {
    "tactics": [
      "TA1036"
    ],
    "techniques": [
      "T002"
    ]
  },
  "detection": {
    "query": "selection_rtlo_unicode: {\"TargetFilename|contains\": \"\\\\u202e\"}\nselection_extensions: {\"TargetFilename|contains\": [\"fpd..\", \"nls..\", \"vsc..\", \"xcod.\", \"xslx.\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Filenames that contains scriptures such as arabic or hebrew might make use of this character"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "file_event"
  ]
}