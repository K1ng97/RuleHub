  "detection": {
    "query": "selection_bin_img: [{\"Image|endswith\": \"\\\\VMwareToolBoxCmd.exe\"}, {\"OriginalFileName\": \"toolbox-cmd.exe\"}]\nselection_bin_cli: {\"CommandLine|contains|all\": [\" script \", \" set \"]}\nselection_susp_paths: {\"CommandLine|contains\": [\":\\\\PerfLogs\\\\\", \":\\\\Temp\\\\\", \":\\\\Windows\\\\System32\\\\Tasks\\\\\", \":\\\\Windows\\\\Tasks\\\\\", \":\\\\Windows\\\\Temp\\\\\", \"\\\\AppData\\\\Local\\\\Temp\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
