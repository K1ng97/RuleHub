    "file_path": "tmp/repos/sigma/rules/windows/registry/registry_set/registry_set_winlogon_allow_multiple_tssessions.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackpersistence",
    "attackt1112"
  ],
  "author": "Nasreddine Bencherchali (Nextron Systems)",
  "references": [
    "http://blog.talosintelligence.com/2022/09/lazarus-three-rats.html"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2022-09-09",
  "modified": "2023-08-17",
  "mitre": {
    "tactics": [
      "TA1112"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"TargetObject|endswith\": \"\\\\Microsoft\\\\Windows NT\\\\CurrentVersion\\\\Winlogon\\\\AllowMultipleTSSessions\", \"Details|endswith\": \"DWORD (0x00000001)\"}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Legitimate use of the multi session functionality"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
