    "attackcommand-and-control",
    "attackt1090",
    "attackt1102",
    "attackt1572"
  ],
  "author": "Andreas Braathen (mnemonic.io)",
  "references": [
    "https://localtonet.com/documents/supported-tunnels",
    "https://cloud.google.com/blog/topics/threat-intelligence/unc3944-targets-saas-applications"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "experimental",
  "created": "2024-06-17",
  "modified": "2024-06-17",
  "mitre": {
    "tactics": [
      "TA1090",
      "TA1102",
      "TA1572"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"DestinationHostname|endswith\": [\".localto.net\", \".localtonet.com\"], \"Initiated\": \"true\"}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
