    "file_path": "tmp/repos/sigma/rules/windows/builtin/bits_client/win_bits_client_new_transfer_via_uncommon_tld.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackpersistence",
    "attackt1197"
  ],
  "author": "Florian Roth (Nextron Systems)",
  "references": [
    "https://github.com/redcanaryco/atomic-red-team/blob/f339e7da7d05f6057fdfcdd3742bfcf365fee2a9/atomics/T1197/T1197.md",
    "https://twitter.com/malmoeb/status/1535142803075960832"
  ],
  "severity": "medium",
  "type": "sigma",
  "status": "test",
  "created": "2022-06-10",
  "modified": "2024-12-25",
  "mitre": {
    "tactics": [
      "TA1197"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"EventID\": 16403}\nfilter_main_generic: {\"RemoteName|contains\": [\".azureedge.net/\", \".com/\", \".sfx.ms/\", \"download.mozilla.org/\", \"cdn.onenote.net/\", \"cdn.office.net/\"]}",
    "condition": "selection and not 1 of filter_main_*",
    "fields": []
  },
  "falsepositives": [
    "This rule doesn't exclude other known TLDs such as \".org\" or \".net\". It's recommended to apply additional filters for software and scripts that leverage the BITS service"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "bits-client"
  ]
}