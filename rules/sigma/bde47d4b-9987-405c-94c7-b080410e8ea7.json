  "name": "Clearing Windows Console History",
  "description": "Identifies when a user attempts to clear console history. An adversary may clear the command history of a compromised account to conceal the actions undertaken during an intrusion.",
  "source": {
    "type": "sigma",
    "id": "bde47d4b-9987-405c-94c7-b080410e8ea7",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/posh_ps_clearing_windows_console_history.yml",
    "file_path": "tmp/repos/sigma/rules/windows/powershell/powershell_script/posh_ps_clearing_windows_console_history.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackt1070",
    "attackt1070003"
  ],
  "author": "Austin Songer @austinsonger",
  "references": [
    "https://stefanos.cloud/blog/kb/how-to-clear-the-powershell-command-history/",
    "https://www.shellhacks.com/clear-history-powershell/",
    "https://community.sophos.com/sophos-labs/b/blog/posts/powershell-command-history-forensics"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "test",
  "created": "2021-11-25",
  "modified": "2022-12-25",
  "mitre": {
    "tactics": [
      "TA1070"
    ],
    "techniques": [
      "T003"
    ]
  },
  "detection": {
    "query": "selection1: {\"ScriptBlockText|contains\": \"Clear-History\"}\nselection2a: {\"ScriptBlockText|contains\": [\"Remove-Item\", \"rm\"]}\nselection2b: {\"ScriptBlockText|contains\": [\"ConsoleHost_history.txt\", \"(Get-PSReadlineOption).HistorySavePath\"]}",
    "condition": "selection1 or selection2a and selection2b",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "ps_script"
  ]
}