  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\CertMgr.exe\"}, {\"OriginalFileName\": \"CERTMGT.EXE\"}]\nselection_cli: {\"CommandLine|contains|all\": [\"/add\", \"root\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
