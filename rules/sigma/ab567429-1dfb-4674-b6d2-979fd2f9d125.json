  "detection": {
    "query": "selection: {\"TargetObject|endswith\": \"\\\\Microsoft\\\\Internet Explorer\\\\Main\\\\DisableFirstRunCustomize\", \"Details\": [\"DWORD (0x00000001)\", \"DWORD (0x00000002)\"]}\nfilter_main_generic: {\"Image\": [\"C:\\\\Windows\\\\explorer.exe\", \"C:\\\\Windows\\\\System32\\\\ie4uinit.exe\"]}",
    "condition": "selection and not 1 of filter_main_*",
    "fields": []
  },
  "falsepositives": [
    "As this is controlled by group policy as well as user settings. Some false positives may occur."
  ],
