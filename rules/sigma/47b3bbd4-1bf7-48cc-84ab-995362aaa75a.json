  },
  "tags": [
    "attackexecution",
    "attackt1059"
  ],
  "author": "Li Ling, Andy Parkidomo, Robert Rakowski, Blake Hartstein (Bloomberg L.P.)",
  "references": [
    "https://gtfobins.github.io/gtfobins/git/#shell"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "experimental",
  "created": "2024-09-02",
  "modified": "2024-09-02",
  "mitre": {
    "tactics": [
      "TA1059"
    ],
    "techniques": []
  },
  "detection": {
    "query": "selection: {\"ParentImage|endswith\": \"/git\", \"ParentCommandLine|contains|all\": [\" -p \", \"help\"], \"CommandLine|contains\": [\"bash 0<&1\", \"dash 0<&1\", \"sh 0<&1\"]}",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Unknown"
