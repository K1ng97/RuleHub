{
  "id": "bab049ca-7471-4828-9024-38279a4c04da",
  "name": "Detect Virtualbox Driver Installation OR Starting Of VMs",
  "description": "Adversaries can carry out malicious operations using a virtual instance to avoid detection. This rule is built to detect the registration of the Virtualbox driver or start of a Virtualbox VM.",
  "source": {
    "type": "sigma",
    "id": "bab049ca-7471-4828-9024-38279a4c04da",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/proc_creation_win_virtualbox_execution.yml",
    "file_path": "tmp/repos/sigma/rules/windows/process_creation/proc_creation_win_virtualbox_execution.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackt1564",
    "attackt1564006"
  ],
  "author": "Janantha Marasinghe",
  "references": [
    "https://news.sophos.com/en-us/2020/05/21/ragnar-locker-ransomware-deploys-virtual-machine-to-dodge-security/",
    "https://threatpost.com/maze-ransomware-ragnar-locker-virtual-machine/159350/"
  ],
  "severity": "low",
  "type": "sigma",
  "status": "test",
  "created": "2020-09-26",
  "modified": "2022-07-14",
  "mitre": {
    "tactics": [
      "TA1564"
    ],
    "techniques": [
      "T006"
    ]
  },
  "detection": {
    "query": "selection_1: {\"CommandLine|contains\": [\"VBoxRT.dll,RTR3Init\", \"VBoxC.dll\", \"VBoxDrv.sys\"]}\nselection_2: {\"CommandLine|contains\": [\"startvm\", \"controlvm\"]}",
    "condition": "1 of selection_*",
    "fields": [
      "ComputerName",
      "User",
      "CommandLine",
      "ParentCommandLine"
    ]
  },
  "falsepositives": [
    "This may have false positives on hosts where Virtualbox is legitimately being used for operations"
  ],
  "level": "low",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}