  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"\\\\winget.exe\"}, {\"OriginalFileName\": \"winget.exe\"}]\nselection_cli: {\"CommandLine|contains|all\": [\"source \", \"add \", \"http://\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
