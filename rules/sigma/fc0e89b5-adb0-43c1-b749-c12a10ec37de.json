  "id": "fc0e89b5-adb0-43c1-b749-c12a10ec37de",
  "name": "SafeBoot Registry Key Deleted Via Reg.EXE",
  "description": "Detects execution of \"reg.exe\" commands with the \"delete\" flag on safe boot registry keys. Often used by attacker to prevent safeboot execution of security products",
  "source": {
    "type": "sigma",
    "id": "fc0e89b5-adb0-43c1-b749-c12a10ec37de",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/proc_creation_win_reg_delete_safeboot.yml",
    "file_path": "tmp/repos/sigma/rules/windows/process_creation/proc_creation_win_reg_delete_safeboot.yml"
  },
  "tags": [
    "attackdefense-evasion",
    "attackt1562001"
  ],
  "author": "Nasreddine Bencherchali (Nextron Systems), Tim Shelton",
  "references": [
    "https://www.trendmicro.com/en_us/research/22/e/avoslocker-ransomware-variant-abuses-driver-file-to-disable-anti-Virus-scans-log4shell.html"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "test",
  "created": "2022-08-08",
  "modified": "2023-02-04",
  "mitre": {
    "tactics": [
      "TA1562"
    ],
    "techniques": [
      "T001"
    ]
  },
  "detection": {
    "query": "selection_img: [{\"Image|endswith\": \"reg.exe\"}, {\"OriginalFileName\": \"reg.exe\"}]\nselection_delete: {\"CommandLine|contains|all\": [\" delete \", \"\\\\SYSTEM\\\\CurrentControlSet\\\\Control\\\\SafeBoot\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unlikely"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "process_creation"
  ]
}