  "detection": {
    "query": "selection: {\"Provider_Name\": \"MsiInstaller\", \"EventID\": [1040, 1042], \"Data|contains\": [\":\\\\Windows\\\\TEMP\\\\\", \"\\\\\\\\\\\\\\\\\", \"\\\\Desktop\\\\\", \"\\\\PerfLogs\\\\\", \"\\\\Users\\\\Public\\\\\"]}\nfilter_winget: {\"Data|contains\": \"\\\\AppData\\\\Local\\\\Temp\\\\WinGet\\\\\"}\nfilter_updhealthtools: {\"Data|contains\": \"C:\\\\Windows\\\\TEMP\\\\UpdHealthTools.msi\"}",
    "condition": "selection and not 1 of filter_*",
    "fields": []
  },
  "falsepositives": [
    "False positives may occur if you allow installation from folders such as the desktop, the public folder or remote shares. A baseline is required before production use."
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "application"
  ]
