{
  "id": "8e1cb247-6cf6-42fa-b440-3f27d57e9936",
  "name": "Potential Persistence Via Microsoft Office Add-In",
  "description": "Detects potential persistence activity via startup add-ins that load when Microsoft Office starts (.wll/.xll are simply .dll fit for Word or Excel).",
  "source": {
    "type": "sigma",
    "id": "8e1cb247-6cf6-42fa-b440-3f27d57e9936",
    "url": "https://github.com/SigmaHQ/sigma/blob/master/file_event_win_office_addin_persistence.yml",
    "file_path": "tmp/repos/sigma/rules/windows/file/file_event/file_event_win_office_addin_persistence.yml"
  },
  "tags": [
    "attackpersistence",
    "attackt1137006"
  ],
  "author": "NVISO",
  "references": [
    "Internal Research",
    "https://labs.withsecure.com/publications/add-in-opportunities-for-office-persistence",
    "https://github.com/redcanaryco/atomic-red-team/blob/4ae9580a1a8772db87a1b6cdb0d03e5af231e966/atomics/T1137.006/T1137.006.md"
  ],
  "severity": "high",
  "type": "sigma",
  "status": "test",
  "created": "2020-05-11",
  "modified": "2023-02-08",
  "mitre": {
    "tactics": [
      "TA1137"
    ],
    "techniques": [
      "T006"
    ]
  },
  "detection": {
    "query": "selection_wlldropped: {\"TargetFilename|contains\": \"\\\\Microsoft\\\\Word\\\\Startup\\\\\", \"TargetFilename|endswith\": \".wll\"}\nselection_xlldropped: {\"TargetFilename|contains\": \"\\\\Microsoft\\\\Excel\\\\Startup\\\\\", \"TargetFilename|endswith\": \".xll\"}\nselection_xladropped: {\"TargetFilename|contains\": \"Microsoft\\\\Excel\\\\XLSTART\\\\\", \"TargetFilename|endswith\": \".xlam\"}\nselection_generic: {\"TargetFilename|contains\": \"\\\\Microsoft\\\\Addins\\\\\", \"TargetFilename|endswith\": [\".xlam\", \".xla\", \".ppam\"]}",
    "condition": "1 of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Legitimate add-ins"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "file_event"
  ]
}