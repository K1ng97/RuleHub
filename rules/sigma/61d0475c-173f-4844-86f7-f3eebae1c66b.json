  "detection": {
    "query": "selection_cmdlet: {\"ScriptBlockText|contains\": \"Set-ExecutionPolicy\"}\nselection_option: {\"ScriptBlockText|contains\": [\"Unrestricted\", \"bypass\"]}\nfilter_optional_chocolatey: {\"ScriptBlockText|contains\": [\"(New-Object System.Net.WebClient).DownloadString('https://community.chocolatey.org/install.ps1')\", \"(New-Object System.Net.WebClient).DownloadString('https://chocolatey.org/install.ps1')\"]}",
    "condition": "all of selection_* and not 1 of filter_optional_*",
    "fields": []
  },
  "falsepositives": [
    "Administrator script"
  ],
  "level": "medium",
  "rule_format": "standard",
  "platforms": [],
