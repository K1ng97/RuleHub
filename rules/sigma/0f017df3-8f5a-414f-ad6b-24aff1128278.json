  "detection": {
    "query": "selection: [{\"ScriptBlockText|contains\": [\"Clear-EventLog \", \"Remove-EventLog \", \"Limit-EventLog \", \"Clear-WinEvent \"]}, {\"ScriptBlockText|contains|all\": [\"Eventing.Reader.EventLogSession\", \"ClearLog\"]}, {\"ScriptBlockText|contains\": [\"Diagnostics.EventLog\", \"Clear\"]}]",
    "condition": "selection",
    "fields": []
  },
  "falsepositives": [
    "Rare need to clear logs before doing something. Sometimes used by installers or cleaner scripts. The script should be investigated to determine if it's legitimate"
  ],
