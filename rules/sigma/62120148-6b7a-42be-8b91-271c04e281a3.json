  "detection": {
    "query": "selection_1: {\"TargetObject|contains|all\": [\"\\\\Software\\\\Microsoft\\\\Windows\\\\CurrentVersion\\\\CapabilityAccessManager\\\\ConsentStore\\\\\", \"\\\\NonPackaged\"]}\nselection_2: {\"TargetObject|contains\": [\"microphone\", \"webcam\"]}\nselection_3: {\"TargetObject|contains\": [\":#Windows#Temp#\", \":#$Recycle.bin#\", \":#Temp#\", \":#Users#Public#\", \":#Users#Default#\", \":#Users#Desktop#\"]}",
    "condition": "all of selection_*",
    "fields": []
  },
  "falsepositives": [
    "Unlikely, there could be conferencing software running from a Temp folder accessing the devices"
  ],
  "level": "high",
  "rule_format": "standard",
  "platforms": [],
  "data_sources": [
    "windows",
    "registry_event"
  ]
